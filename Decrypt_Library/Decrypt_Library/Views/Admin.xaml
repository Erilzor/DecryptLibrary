<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             BackgroundColor="MidnightBlue"
             x:Class="Decrypt_Library.Views.Admin">
    <ContentPage.Content>


        <Grid BackgroundColor="MidnightBlue">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Frame BackgroundColor="White"
                   BorderColor="Black"
                   HeightRequest="30"
                   Grid.Row="0"
                   CornerRadius="0">

                <Label Text="Admin page"
                       HorizontalOptions="CenterAndExpand"
                       
                       VerticalOptions="CenterAndExpand"/>

            </Frame>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
                <Frame Grid.Column="2"
                       IsClippedToBounds="True"
                       BackgroundColor="Gray">

                    <Grid>

                        <ListView  
                        x:Name="ProductList" 
                        ItemTapped="ProductList_ItemTapped" 
                        Grid.Row="0"
                               >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{Binding Id}" HorizontalOptions="Start" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Title}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding CategoriesName}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding UserName}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Ssn}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding PhoneNumber}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Email}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding UserTypeId}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Country}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding EventName}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Time}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <Frame IsVisible="False" 
                               BorderColor="Black"
                               BackgroundColor="Gray"
                               x:Name="AddProduct">

                            <ScrollView>
                                <Frame BorderColor="Black">

                                    <AbsoluteLayout>

                                        <Label Text="Title: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,-10,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,-40,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                                Completed="Entry_ProductInputCompleted"
                                                x:Name="entryTitle"
                                    Placeholder="Produktnamn"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">
                                            </Entry>
                                        </Frame>
                                        
                                        <Label Text="ISBN: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,30,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,0,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryISBN"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>

        
                                        <Label Text="Description: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,110,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,80,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                               x:Name="entryDescription"
                                                Completed="Entry_ProductInputCompleted"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">
                                            </Entry>

                                        </Frame>
                                        
                                        <Label Text="Pages: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,150,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,120,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                               x:Name="entryPages"
                                                Completed="Entry_ProductInputCompleted"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>
                                        </Frame>

                                        <Label Text="Playtime: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,190,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,160,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryPlaytime"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>

                                        <Label Text="Publisher: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,230,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,200,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                               x:Name="entryPublisher"
                                                Completed="Entry_ProductInputCompleted"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>

                                        <Label Text="Language ID: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,270,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,240,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryLanguage"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>

                                        <Label Text="Author name: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,310,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,280,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryAuthor"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>
                                            

                                        </Frame>

                                        <Label Text="PublishDate: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,350,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,320,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryDate"
                                                Placeholder="dd/mm/yyyy"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>


                                        </Frame>

                                        <Label Text="Category ID: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,390,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,360,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryCategoryId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>

                                        <Label Text="Shelf ID: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,430,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,400,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryShelfId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>
                                        </Frame>

                                        <Label Text="Narrator: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,470,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,440,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryNarrator"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>

                      


                                        <Label Text="Audience Id: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,510,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,480,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryAudienceId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>



                                        <Label Text="Media Id: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,70,90,50"/>

                                        <Frame AbsoluteLayout.LayoutBounds="100,40,380,80"
                                   >
                                            <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                                Completed="Entry_ProductInputCompleted"
                                               x:Name="entryMediaId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                            </Entry>

                                        </Frame>

                                        <Switch AbsoluteLayout.LayoutBounds="120,620,380,80"  
                                                x:Name="inStock"/>

                                        <Label Text="In Stock: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,550,90,50"/>

                                        <Switch AbsoluteLayout.LayoutBounds="120,540,380,80"
                                                x:Name="newProduct"
                                               />

                                        <Label Text="New Product: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,590,90,50"/>

                                        <Switch AbsoluteLayout.LayoutBounds="120,580,380,80"
                                                x:Name="hiddenProduct"/>

                                        <Label Text="Hidden product: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,630,90,50"/>

                                        <Button 
                                                AbsoluteLayout.LayoutBounds="120,670,220,50"
                                                CornerRadius="10"
                                                Grid.Column="1"
                                                BackgroundColor="Black"
                                                TextColor="White"
                                                Text="Insert product"/>

                                    </AbsoluteLayout>
                                </Frame>
                            </ScrollView>
                        </Frame>
                    </Grid>
                </Frame>
            
