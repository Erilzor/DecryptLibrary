                            </StackLayout>

                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame Margin="0,10,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Frame WidthRequest="100"
                                                   IsClippedToBounds="True"
                                                   Padding="0"
                                                   HorizontalOptions="FillAndExpand"
                                                   CornerRadius="10">

                                                <Image Source="{Binding Title, StringFormat='{0}.jpg'}" 
                                                       Aspect="AspectFill"
                                                       WidthRequest="100"/>
                                            </Frame>

                                            <StackLayout
                                                Padding="0"
                                                Margin="10,0,0,0"
                                                Grid.Column="1">

                                                <Label Text="{Binding Title}"
                                                       FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>

