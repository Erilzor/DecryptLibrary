                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>


                                    <Label Text="Category ID: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,390,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryCategoryId_TextChanged"
                                               x:Name="entryCategoryId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>

                                    <Label Text="Shelf ID: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,430,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryShelfId_TextChanged"
                                               x:Name="entryShelfId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>

                                    <Label Text="Narrator: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,470,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryNarrator_TextChanged"
                                               x:Name="entryNarrator"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>


                                    <Label Text="Audience Id: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,510,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryAudienceId_TextChanged"
                                               x:Name="entryAudienceId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>

                                    <Label Text="Media Id: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,70,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryMediaId_TextChanged"
                                               x:Name="entryMediaId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>

                                    <Label Text="Description: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,110,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                            HeightRequest="100"
                                            VerticalTextAlignment="Start"
                                               x:Name="entryDescription"
                                            TextChanged="entryDescription_TextChanged"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">
                                        </Entry>

                                    <Label Text="Pages:"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,150,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                               x:Name="entryPages"
                                            TextChanged="entryPages_TextChanged"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>

                                    <Label Text="Playtime: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,190,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryPlaytime_TextChanged"
                                               x:Name="entryPlaytime"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>


                                    <Label Text="In Stock: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,550,90,50"/>


                                    <Switch AbsoluteLayout.LayoutBounds="120,620,380,80"  
                                                x:Name="inStock"/>
    
                                    <Label Text="New Product: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,590,90,50"/>

                                    <Switch AbsoluteLayout.LayoutBounds="120,540,380,80"
                                                x:Name="newProduct"
                                               />

                                    <Label Text="Hidden product: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,630,90,50"/>

                                    <Switch AbsoluteLayout.LayoutBounds="120,580,380,80"
                                                x:Name="hiddenProduct"/>



                                    <Button 
                                                AbsoluteLayout.LayoutBounds="120,670,220,50"
                                                CornerRadius="10"
                                                Grid.Column="1"
                                        Clicked="CompleteProduct_Pressed"
                                                BackgroundColor="Black"
                                                TextColor="White"
                                                Text="Insert product"/>

                                    <Button Text="hej" IsVisible="false" x:Name="Registerworked"/>

                                </StackLayout>

                            </ScrollView>
                            
                        </Frame>
                    </Grid>
                </Frame>
            
