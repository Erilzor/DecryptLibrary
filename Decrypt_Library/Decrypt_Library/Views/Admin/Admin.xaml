<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             Title="Admin Options"
            BarTextColor="White"
            BarBackground="Black"
             x:Class="Decrypt_Library.Views.AdminPage">
    
    <ContentPage Title="Produkter">

        <Grid BackgroundColor="MidnightBlue">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Frame BackgroundColor="White"
                   BorderColor="Black"
                   HeightRequest="30"
                   Grid.Row="0"
                   CornerRadius="0">

                <Label Text="Admin page"
                       HorizontalOptions="CenterAndExpand"
                       
                       VerticalOptions="CenterAndExpand"/>
            </Frame>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


           

                <Frame Grid.Column="1"
                       WidthRequest="300"
                       IsClippedToBounds="True"
                       BackgroundColor="Gray">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>

                        <ListView  
                        x:Name="ProductList" 
                        ItemTapped="ProductList_ItemTapped" 
                        Grid.Row="1"
                            Grid.Column="1"
                               >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{Binding Id}" HorizontalOptions="Start" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Title}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding CategoriesName}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding UserName}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Ssn}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding PhoneNumber}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Email}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding UserTypeId}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Languages}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding EventName}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                            <Label Text="{Binding Time}" 
                                               HorizontalOptions="StartAndExpand" 
                                               FontSize="10" 
                                               TextColor="Aqua"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <Frame IsVisible="False" 
                               BorderColor="Black"
                               BackgroundColor="Gray"
                               Grid.Column="1"
                               WidthRequest="130"
                               Grid.Row="1"
                               x:Name="AddProduct">

                            <ScrollView>
                                <StackLayout>

                                    <Label Text="Lägg till en produkt"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalOptions="CenterAndExpand"/>

                                    <Label Text="Book Title: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,-10,90,50"/>


                                    <Entry AbsoluteLayout.LayoutBounds="120,-40,380,70"
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                           TextChanged="entryTitle_TextChanged"
                                                x:Name="entryTitle"
                                    Placeholder="Produktnamn"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">
                                        
                                    </Entry>

                                    <Label Text="ISBN: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,30,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryISBN_TextChanged"
                                               x:Name="entryISBN"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>



                                    <Label Text="Publisher: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,230,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                               x:Name="entryPublisher"
                                            TextChanged="entryPublisher_TextChanged"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>


                                    <Label Text="Language ID: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,270,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryLanguage_TextChanged"
                                               x:Name="entryLanguage"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>


                                    <Label Text="Author name: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,310,90,50"/>

                                        <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryAuthor_TextChanged"
                                               x:Name="entryAuthor"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                        </Entry>


                                    <Label Text="PublishDate: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,350,90,50"/>

