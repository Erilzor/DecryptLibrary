                                <StackLayout>

                                    <Label Text="Kategori"
                                       HorizontalOptions="CenterAndExpand"
                                       VerticalOptions="CenterAndExpand"
                                       FontAttributes="bold"/>
                                </StackLayout>

                            </Frame>

                            <Button BackgroundColor="DarkOrange"
