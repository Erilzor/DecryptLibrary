                            </StackLayout>

                        </Frame>

                            <Button BackgroundColor="DarkOrange"
                                HeightRequest="20"
                                Text="Ta Bort"
                                FontAttributes="Bold"
                                TextColor="White"
                                Padding="10,0,0,0"
                                    FontSize="10"
                                CornerRadius="10"
                                    />

                            <Frame BackgroundColor="White"
                           HeightRequest="30"
                           Padding="0"
                           WidthRequest="50"
                           IsClippedToBounds="True">
                            <StackLayout>

                                <Label Text="Anställda"
                                       HorizontalOptions="CenterAndExpand"
                                       VerticalOptions="CenterAndExpand"
                                       FontAttributes="bold"/>
                            </StackLayout>

                        </Frame>

                            <Button BackgroundColor="DarkOrange"
                                HeightRequest="20"
                                Text="Visa"
                                FontAttributes="Bold"
                                TextColor="White"
                                    Clicked="Button_ShowAllUsers"
                                Padding="10,0,0,0"
                                    FontSize="10"
