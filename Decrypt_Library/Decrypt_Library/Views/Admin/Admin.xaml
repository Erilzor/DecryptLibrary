<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             Title="Admin Options"
            BarTextColor="White"
            SelectedTabColor="Orange"
            UnselectedTabColor="White"
            xmlns:windows="clr-namespace:Xamarin.Forms.PlatformConfiguration.WindowsSpecific;assembly=Xamarin.Forms.Core"
            windows:Page.ToolbarPlacement="Bottom"
            BarBackground="Black"
             x:Class="Decrypt_Library.Views.AdminPage">
    
    <ContentPage Title="Produkter">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame BackgroundColor="Black" 
                   Grid.Column="1"
                   HeightRequest="400"
                   CornerRadius="10"
                   WidthRequest="500"
                   Grid.Row="1">

                <StackLayout>

                    <StackLayout Orientation="Vertical">

                        <Label Text="Product Options"
                                           FontSize="20"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           HorizontalOptions="CenterAndExpand"/>

                        <StackLayout Orientation="Horizontal">
                            <Button Text="Add Product"
                            BackgroundColor="White"
                                    Clicked="CompleteProduct_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Show Product"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    Clicked="ShowProductsButton_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Remove Product"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    Clicked="RemoveProductButton_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                        </StackLayout>
                        <StackLayout x:Name="createProductTab" IsVisible="false">
              
                        <ScrollView>
                            <StackLayout>



                                <Label Text="Book Title: "
                                       FontSize="12"
                                           TextColor="White"
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,-10,90,50"/>


                                <Entry AbsoluteLayout.LayoutBounds="120,-40,380,70"
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                           TextChanged="entryTitle_TextChanged"
                                                x:Name="entryTitle"
                                    Placeholder="Produktnamn"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>

                                <Label Text="ISBN: "
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,30,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryISBN_TextChanged"
                                               x:Name="entryISBN"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>



                                <Label Text="Publisher: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                           TextColor="White"
                                           
                                       AbsoluteLayout.LayoutBounds="0,230,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                               x:Name="entryPublisher"
                                            TextChanged="entryPublisher_TextChanged"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>


                                <Label Text="Language ID: "
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,270,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryLanguage_TextChanged"
                                               x:Name="entryLanguage"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>


                                <Label Text="Author name: "
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,310,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryAuthor_TextChanged"
                                               x:Name="entryAuthor"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>


                                <Label Text="PublishDate: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                           TextColor="White"
                                           
                                       AbsoluteLayout.LayoutBounds="0,350,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryDate_TextChanged"
                                               x:Name="entryDate"
                                                Placeholder="yyyy/mm/dd"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>


                                <Label Text="Category ID: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                           TextColor="White"
                                           
                                       AbsoluteLayout.LayoutBounds="0,390,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryCategoryId_TextChanged"
                                               x:Name="entryCategoryId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>

                                <Label Text="Shelf ID: "
                                       FontSize="12"
                                           TextColor="White"

                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,430,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryShelfId_TextChanged"
                                               x:Name="entryShelfId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>

                                <Label Text="Narrator: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                           TextColor="White"
                                           
                                       AbsoluteLayout.LayoutBounds="0,470,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryNarrator_TextChanged"
                                               x:Name="entryNarrator"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>


                                <Label Text="Audience Id: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                           TextColor="White"
                                           
                                       AbsoluteLayout.LayoutBounds="0,510,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryAudienceId_TextChanged"
                                               x:Name="entryAudienceId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>

                                <Label Text="Media Id: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                           TextColor="White"
                                           
                                       AbsoluteLayout.LayoutBounds="0,70,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryMediaId_TextChanged"
                                               x:Name="entryMediaId"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>

                                <Label Text="Description: "
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,110,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                            HeightRequest="100"
                                            VerticalTextAlignment="Start"
                                               x:Name="entryDescription"
                                            TextChanged="entryDescription_TextChanged"
                                    FontSize="12"
                                    FontAttributes="Bold"
                                    TextColor="BLack">
                                </Entry>

                                <Label Text="Pages:"
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,150,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                               x:Name="entryPages"
                                            TextChanged="entryPages_TextChanged"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>

                                <Label Text="Playtime: "
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,190,90,50"/>

                                <Entry
                                    PlaceholderColor="Gray"
                                    BackgroundColor="White"
                                    FontSize="12"
                                            TextChanged="entryPlaytime_TextChanged"
                                               x:Name="entryPlaytime"
                                    FontAttributes="Bold"
                                    TextColor="BLack">

                                </Entry>


                                <Label Text="In Stock: "
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       AbsoluteLayout.LayoutBounds="0,550,90,50"/>


                                <Switch AbsoluteLayout.LayoutBounds="120,620,380,80"
                                        BackgroundColor="White"
                                                x:Name="inStock"/>

                                <Label Text="New Product: "
                                       FontSize="12"
                                           TextColor="White"
                                           
                                       FontAttributes="Bold"
                                       />

                                <Switch 
                                        BackgroundColor="White"
                                        
                                                x:Name="newProduct"
                                               />

                                <Label Text="Hidden product: "
                                       FontSize="12"
                                       FontAttributes="Bold"
                                           TextColor="White"
                                           
                                    />

                                <Switch 
                                        BackgroundColor="White"
                                        
                                                x:Name="hiddenProduct"/>


                                    <Button      CornerRadius="10"
                                                Grid.Column="1"
                                                 Clicked="CompleteProduct_Pressed"
                                                BackgroundColor="White"
                                                TextColor="Black"
                                    FontAttributes="Bold"
                                                Text="Insert product"/>
                                </StackLayout>

                        </ScrollView>
                        </StackLayout>

                    </StackLayout>

                    <ListView x:Name="ProductList"
                              IsVisible="false"
                              >
                        <ListView.ItemTemplate>

                            <DataTemplate>
                                <ViewCell>

                                    <Frame>
                                        <StackLayout Orientation="Horizontal">

                                            <Label Text="{Binding Id}"
                                            TextColor="White"/>
                                            <Label Text="{Binding Title}"
                                            TextColor="White"/>
                                            <Label Text="{Binding Description}"
                                            TextColor="White"/>

                                        </StackLayout>
                                    </Frame>


                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                    <StackLayout x:Name="removeProductTab"
                                 IsVisible="false">

                        <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Id på den produkt du vill ta bort"/>

                        <Entry x:Name="entryProductRemove"
                               TextChanged="entryProductRemove_TextChanged"
                           >

                        </Entry>

                    </StackLayout>


                </StackLayout>

            </Frame>



        </Grid>




    </ContentPage>

    <ContentPage Title="Kategorier">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame BackgroundColor="Black" 
                   Grid.Column="1"
                   HeightRequest="400"
                   CornerRadius="10"
                   WidthRequest="500"
                   Grid.Row="1">

                <StackLayout>

                    <StackLayout Orientation="Vertical">

                        <Label TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                               HorizontalOptions="CenterAndExpand"
                           Text="Category Options"/>

                        <StackLayout Orientation="Horizontal">
                            <Button Text="Add Category"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                                Clicked="AddCategoryButton_Pressed"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Show Category"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    x:Name="showCategoriestab2"
                            Clicked="ShowCategories_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Remove Category"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    Clicked="RemoveCategoryButton_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                        </StackLayout>

                        <StackLayout x:Name="createCategoryBar"
                                 IsVisible="false">

                            <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Namn på nya kategorin tack!"/>
                            <Entry x:Name="entryCategoryNametab2"
                                   TextChanged="entryCategoryNametab2_TextChanged"
                           >

                            </Entry>

                        </StackLayout>

                        <StackLayout x:Name="removeCategoryTab"
                                 IsVisible="false">

                            <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Id på den kategori du vill ta bort"/>

                            <Entry x:Name="entryCategoryIdtab2"
                                   TextChanged="entryCategoryIdRemovetab2_TextChanged"
                           >

                            </Entry>
                        </StackLayout>

                    </StackLayout>


                    <ListView x:Name="categoryList"
                              >
                        <ListView.ItemTemplate>

                            <DataTemplate>
                                <ViewCell>

                                    <Frame>
                                        <StackLayout Orientation="Horizontal">

                                            <Label Text="{Binding Id}"
                                            TextColor="White"/>
                                            <Label Text="{Binding CategoriesName}"
                                            TextColor="White"/>

                                        </StackLayout>
                                    </Frame>


                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        
                    </ListView>
                    

                </StackLayout>
                
            </Frame>

        </Grid>
        
    </ContentPage>

    <ContentPage Title="Events">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame BackgroundColor="Black" 
                   Grid.Column="1"
                   HeightRequest="400"
                   CornerRadius="10"
                   WidthRequest="500"
                   Grid.Row="1">

                <StackLayout>

                    <StackLayout Orientation="Vertical">

                        <Label TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                               HorizontalOptions="CenterAndExpand"
                           Text="Event Options"/>

                        <StackLayout Orientation="Horizontal">
                            <Button Text="Add Event"
                            BackgroundColor="White"
                                     Clicked="AddEventButton_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Remove Event"
                            BackgroundColor="White"
                                    Clicked="RemoveEventButton_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>


                            <Button Text="Show Event"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                                    Clicked="ShowAllEvents_Pressed"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                        </StackLayout>
                    </StackLayout>

                    <StackLayout x:Name="createEventBar"
                                 IsVisible="false">

                    <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Eventnamn"/>
                    <Entry x:Name="entryEventNametab2"
                           TextChanged="entryEventNametab2_TextChanged"
                           >

                    </Entry>

                    <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Beskrivning"/>

                    <Entry x:Name="entryEventDescriptiontab2"
                           TextChanged="entryEventDescriptiontab2_TextChanged"
                           >

                    </Entry>

                    <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Tid och datum år/månad/dag"/>

                    <Entry x:Name="entryEventTimetab2"
                           Placeholder="yyyy/mm/dd"
                           TextChanged="entryEventTimetab2_TextChanged"
                           >

                    </Entry>

                    </StackLayout>

                    <StackLayout x:Name="removeEventTab"
                                 IsVisible="false">

                        <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Id på det event du vill ta bort"/>

                        <Entry x:Name="entryEventRemovetab2"
                               TextChanged="entryEventRemovetab2_TextChanged"
                           >

                        </Entry>
                    </StackLayout>

                    <ListView x:Name="eventList"
                              >
                        <ListView.ItemTemplate>

                            <DataTemplate>
                                <ViewCell>

                                    <Frame>
                                        <StackLayout Orientation="Horizontal">

                                            <Label Text="{Binding Id}"
                                            TextColor="White"/>
                                            <Label Text="{Binding EventName}"
                                            TextColor="White"/>

                                            <Label Text="{Binding Description}"
                                            TextColor="White"/>

                                            <Label Text="{Binding Time}"
                                            TextColor="White"/>

                                        </StackLayout>
                                    </Frame>


                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>


                </StackLayout>

            </Frame>

        </Grid>



    </ContentPage>

    <ContentPage Title="Anställda">

        <Label Text="4"/>

    </ContentPage>

    <ContentPage Title="Språk">

        <Label Text="5"/>

    </ContentPage>

    <ContentPage Title="Statistik">

        <Label Text="6"/>

    </ContentPage>

    <ContentPage Title="Låna">

        <Label Text="7"/>


    </ContentPage>
</TabbedPage>