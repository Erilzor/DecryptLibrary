<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             Title="Admin Options"
            BarTextColor="White"
            SelectedTabColor="Orange"
            UnselectedTabColor="White"
            xmlns:windows="clr-namespace:Xamarin.Forms.PlatformConfiguration.WindowsSpecific;assembly=Xamarin.Forms.Core"
            windows:Page.ToolbarPlacement="Bottom"
            BarBackground="Black"
             x:Class="Decrypt_Library.Views.AdminPage">
    
    <ContentPage Title="Produkter">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Product Options"
                   FontSize="20"
                   TextColor="Black"
                   Grid.Column="1"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Frame BackgroundColor="Black" 
                   Grid.Column="1"
                   HeightRequest="500"
                   CornerRadius="10"
                   WidthRequest="500"
                   Grid.Row="1">

                <StackLayout>

                    <StackLayout Orientation="Vertical">



                        <StackLayout Orientation="Horizontal">
                            <Button Text="Add Product"
                            BackgroundColor="White"
                                    Clicked="CompleteProduct_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Show Product"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    Clicked="ShowProductsButton_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Remove Product"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    Clicked="RemoveProductButton_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                        </StackLayout>
                        <StackLayout x:Name="createProductTab" 
                                     IsVisible="false"
                                     Margin="25,40,25,0">
              
                        <ScrollView VerticalScrollBarVisibility="Never">
                            <StackLayout>


                                    <Frame BorderColor="White" HeightRequest="800">
                                        <AbsoluteLayout>

                                            <Entry AbsoluteLayout.LayoutBounds="-20,-20,225,40"
                                                   PlaceholderColor="Gray"
                                                   BackgroundColor="White"
                                                   TextChanged="entryTitle_TextChanged"
                                                   x:Name="entryTitle"
                                                   Placeholder="Produktnamn"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="BLack"/>

                                            <Entry
                                                
                                                   PlaceholderColor="Gray"
                                                   BackgroundColor="White"
                                                   FontSize="12"
                                                   Placeholder="ISBN"
                                                   AbsoluteLayout.LayoutBounds="210,-20,225,40"
                                                   TextChanged="entryISBN_TextChanged"
                                                   x:Name="entryISBN"
                                                   FontAttributes="Bold"
                                                   TextColor="BLack"/>
        
                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    Placeholder="Publisher"
                                                    x:Name="entryPublisher"
                                                    TextChanged="entryPublisher_TextChanged"
                                                    FontSize="12"
                                                    AbsoluteLayout.LayoutBounds="210,50,225,40"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>

                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    TextChanged="entryLanguage_TextChanged"
                                                    x:Name="entryLanguage"
                                                    Placeholder="Language"
                                                    AbsoluteLayout.LayoutBounds="-20,50,225,40"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>

                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    TextChanged="entryAuthor_TextChanged"
                                                    x:Name="entryAuthor"
                                                    Placeholder="Author"
                                                    AbsoluteLayout.LayoutBounds="-20,120,225,40"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>


                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    TextChanged="entryDate_TextChanged"
                                                    AbsoluteLayout.LayoutBounds="210,120,225,40"
                                                    x:Name="entryDate"
                                                    Placeholder="yyyy/mm/dd"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>

                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    AbsoluteLayout.LayoutBounds="210,190,225,40"
                                                    FontSize="12"
                                                    Placeholder="Category ID"
                                                    TextChanged="entryCategoryId_TextChanged"
                                                    x:Name="entryCategoryId"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>

                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    Placeholder="ShelfId"
                                                    AbsoluteLayout.LayoutBounds="-20,190,225,40"
                                                    TextChanged="entryShelfId_TextChanged"
                                                    x:Name="entryShelfId"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>

                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    Placeholder="Narrator"
                                                    AbsoluteLayout.LayoutBounds="-20,260,225,40"
                                                    TextChanged="entryNarrator_TextChanged"
                                                    x:Name="entryNarrator"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>
                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    Placeholder="Audience Id"
                                                    AbsoluteLayout.LayoutBounds="210,260,225,40"
                                                    TextChanged="entryAudienceId_TextChanged"
                                                    x:Name="entryAudienceId"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>


                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    TextChanged="entryMediaId_TextChanged"
                                                    x:Name="entryMediaId"
                                                    Placeholder="Media Id"
                                                    FontAttributes="Bold"
                                                    AbsoluteLayout.LayoutBounds="210,330,225,40"
                                                    TextColor="BLack"/>

                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    x:Name="entryPages"
                                                    Placeholder="Pages"
                                                    TextChanged="entryPages_TextChanged"
                                                    FontAttributes="Bold"
                                                    AbsoluteLayout.LayoutBounds="-20,330,225,40"
                                                    TextColor="BLack"/>


                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    VerticalTextAlignment="Start"
                                                    x:Name="entryDescription"
                                                    TextChanged="entryDescription_TextChanged"
                                                    FontSize="12"
                                                    Placeholder="Description"
                                                    AbsoluteLayout.LayoutBounds="-20,399,450,100"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>

                                            <Entry
                                                    PlaceholderColor="Gray"
                                                    BackgroundColor="White"
                                                    FontSize="12"
                                                    TextChanged="entryPlaytime_TextChanged"
                                                    x:Name="entryPlaytime"
                                                    FontAttributes="Bold"
                                                    TextColor="BLack"/>


                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="-20,19,450,32"
                                                     />

                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="204,-20,7,400"
                                                     />

                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="-20,89,450,32"
                                                     />
                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="-20,159,450,32"
                                                     />
                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="-20,229,450,32"
                                                     />

                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="-20,299,450,32"
                                                     />

                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="-20,369,450,32"
                                                     />

                                            <BoxView BackgroundColor="Orange"
                                                     AbsoluteLayout.LayoutBounds="-20,498,450,32"
                                                     />
                                        </AbsoluteLayout>
                                    </Frame>
                                </StackLayout>

                        </ScrollView>
                        </StackLayout>

                        <StackLayout x:Name="removeProductTab"
                                 IsVisible="false">

                            <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Id på den produkt du vill ta bort"/>

                            <Entry x:Name="entryProductRemove"
                               TextChanged="entryProductRemove_TextChanged"
                           >
                            </Entry>
                        </StackLayout>
                    </StackLayout>

                    <ListView x:Name="ProductList"
                              IsVisible="false"
                              >
                        <ListView.ItemTemplate>

                            <DataTemplate>
                                <ViewCell>

                                    <Frame>
                                        <StackLayout Orientation="Horizontal">

                                            <Label Text="{Binding Id}"
                                            TextColor="White"/>
                                            <Label Text="{Binding Title}"
                                            TextColor="White"/>
                                            <Label Text="{Binding Description}"
                                            TextColor="White"/>

                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>


                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage>
    <ContentPage Title="Kategorier">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame BackgroundColor="Black" 
                   Grid.Column="1"
                   HeightRequest="400"
                   CornerRadius="10"
                   WidthRequest="500"
                   Grid.Row="1">

                <StackLayout>

     

                    <StackLayout Orientation="Vertical">

                        <Label TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                               HorizontalOptions="CenterAndExpand"
                           Text="Category Options"/>

                        <StackLayout Orientation="Horizontal">
                            <Button Text="Add Category"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                                Clicked="AddCategoryButton_Pressed"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Show Category"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            Clicked="ShowCategories_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Remove Category"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    Clicked="RemoveCategoryButton_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                        </StackLayout>

                        <StackLayout x:Name="createCategoryBar"
                                 IsVisible="false">

                            <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Namn på nya kategorin tack!"/>
                            <Entry x:Name="entryCategoryNametab2"
                                   TextChanged="entryCategoryNametab2_TextChanged"
                           >
                            </Entry>

                        </StackLayout>

                        <StackLayout x:Name="removeCategoryTab"
                                 IsVisible="false">

                            <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Id på den kategori du vill ta bort"/>

                            <Entry x:Name="entryCategoryIdtab2"
                                   TextChanged="entryCategoryIdRemovetab2_TextChanged"
                           >

                            </Entry>

                        </StackLayout>

                        <StackLayout x:Name="categoryTab"
                                 IsVisible="false">
                            <ListView x:Name="categoryList"
                              IsVisible="true"
                              >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Frame>
                                                <StackLayout Orientation="Horizontal">
                                                    <Label Text="{Binding Id}"
                                            TextColor="White"/>
                                                    <Label Text="{Binding CategoriesName}"
                                            TextColor="White"/>

                                                </StackLayout>
                                            </Frame>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackLayout>
                    </StackLayout>

      
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage>
    <ContentPage Title="Events">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame BackgroundColor="Black" 
                   Grid.Column="1"
                   HeightRequest="400"
                   CornerRadius="10"
                   WidthRequest="500"
                   Grid.Row="1">
                <StackLayout>
                    <StackLayout Orientation="Vertical">
                        <Label TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                               HorizontalOptions="CenterAndExpand"
                           Text="Event Options"/>

                        <StackLayout Orientation="Horizontal">
                            <Button Text="Add Event"
                            BackgroundColor="White"
                                     Clicked="AddEventButton_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Remove Event"
                            BackgroundColor="White"
                                    Clicked="RemoveEventButton_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Show Event"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                                    Clicked="ShowAllEvents_Pressed"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                        </StackLayout>
                    </StackLayout>
                    <StackLayout x:Name="createEventBar"
                                 IsVisible="false">

                    <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Eventnamn"/>
                    <Entry x:Name="entryEventNametab2"
                           TextChanged="entryEventNametab2_TextChanged"
                           >
                    </Entry>

                    <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Beskrivning"/>

                    <Entry x:Name="entryEventDescriptiontab2"
                           TextChanged="entryEventDescriptiontab2_TextChanged"
                           >
                    </Entry>

                    <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Tid och datum år/månad/dag"/>
                    <Entry x:Name="entryEventTimetab2"
                           Placeholder="yyyy/mm/dd"
                           TextChanged="entryEventTimetab2_TextChanged"
                           >
                    </Entry>
                    </StackLayout>
                    <StackLayout x:Name="removeEventTab"
                                 IsVisible="false">

                        <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Id på det event du vill ta bort"/>

                        <Entry x:Name="entryEventRemovetab2"
                               TextChanged="entryEventRemovetab2_TextChanged"
                           >
                        </Entry>
                    </StackLayout>
                    <ListView x:Name="eventList"
                              >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame>
                                        <StackLayout Orientation="Horizontal">

                                            <Label Text="{Binding Id}"
                                            TextColor="White"/>
                                            <Label Text="{Binding EventName}"
                                            TextColor="White"/>

                                            <Label Text="{Binding Description}"
                                            TextColor="White"/>

                                            <Label Text="{Binding Time}"
                                            TextColor="White"/>
                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Frame>
        </Grid>

    </ContentPage>

    <ContentPage Title="Anställda">

    </ContentPage>

    <ContentPage Title="Språk">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Frame BackgroundColor="Black" 
                   Grid.Column="1"
                   HeightRequest="400"
                   CornerRadius="10"
                   WidthRequest="500"
                   Grid.Row="1">
                <StackLayout>
                    <StackLayout Orientation="Vertical">
                        <Label TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                               HorizontalOptions="CenterAndExpand"
                           Text="Language Options"/>

                        <StackLayout Orientation="Horizontal">
                            <Button Text="Add Language"
                            BackgroundColor="White"
                                    Clicked="AddLanguageButton_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Remove Language"
                            BackgroundColor="White"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                                    Clicked="RemoveLanguageButton_Pressed"
                            FontAttributes="Bold"
                            >
                            </Button>

                            <Button Text="Show Languages"
                            BackgroundColor="White"
                                    Clicked="ShowLanguagesButton_Pressed"
                            HorizontalOptions="CenterAndExpand"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            >
                            </Button>

                        </StackLayout>
                    </StackLayout>
                    <StackLayout x:Name="createLanguageBar"
                                 IsVisible="false">

                        <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Eventnamn"/>
                        <Entry x:Name="entryLanguageCreatetab3"
                               TextChanged="entryLanguageCreatetab3_TextChanged"
                           >
                        </Entry>

                    </StackLayout>
                    <StackLayout x:Name="removeLanguageBar"
                                 IsVisible="false">

                        <Label TextColor="White"
                           FontSize="12"
                           FontAttributes="Bold"
                           Text="Id på det språk du vill ta bort"/>

                        <Entry x:Name="entryLanguageRemovetab3"
                               TextChanged="entryLanguageRemovetab3_TextChanged"
                           >
                        </Entry>
                    </StackLayout>
                    <ListView x:Name="languageList"
                              >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame>
                                        <StackLayout Orientation="Horizontal">

                                            <Label Text="{Binding Id}"
                                            TextColor="White"/>
                                            <Label Text="{Binding Languages}"
                                            TextColor="White"/>
                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Frame>
        </Grid>

    </ContentPage>

    <ContentPage Title="Statistik">

        <Label Text="6"/>

    </ContentPage>

    <ContentPage Title="Låna">

        <Label Text="7"/>


    </ContentPage>
</TabbedPage>