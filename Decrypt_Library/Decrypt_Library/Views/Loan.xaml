<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decrypt_Library.Views.Loan">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <AbsoluteLayout Grid.Column="1" Grid.Row="0" HorizontalOptions="CenterAndExpand">
                <Label Text="Utlåning!"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Padding="20,20,20,20"
                       >

                </Label>
            </AbsoluteLayout>

            <StackLayout Grid.Column="1" Grid.Row="1">
                <Frame BackgroundColor="Black"
                   BorderColor="Black"
                   HeightRequest="400"
                   Grid.Row="1"
                   CornerRadius="10"
                   Grid.Column="1"
                   WidthRequest="410">


                    <StackLayout BackgroundColor="Black" Grid.Column="1" Grid.Row="1">
                        <Label x:Name="User" Text="" TextColor="White" />
            <Entry x:Name="CheckUserId" Placeholder="Lånetagar-Id" />
                        <Button x:Name="checkUserButton" Text="Kontrollera lånetagare" Clicked="checkUserButton_Clicked" BackgroundColor="White" TextColor="black" CornerRadius="10" FontAttributes="Bold"/>
            
            <Entry x:Name="Product" Placeholder="Streckod på produkt" IsVisible="false" />
                        <Button x:Name="Add" Text="Lägg till" IsVisible="false" Clicked="Add_Clicked" BackgroundColor="White" TextColor="black" CornerRadius="10" FontAttributes="Bold"/>
                        <Button x:Name="AddNewProduct" Text="Lägg till ny produkt" IsVisible="false" Clicked="AddNewProduct_Clicked" BackgroundColor="White" TextColor="black" CornerRadius="10" FontAttributes="Bold" />
                        <Button x:Name="CheckOut" Text="Check out" IsVisible="false" Clicked="CheckOut_Clicked" BackgroundColor="White" TextColor="black" CornerRadius="10" FontAttributes="Bold" />


                        <Button x:Name="StartAgain" Text="Registrera nytt lån" IsVisible="false" Clicked="StartAgain_Clicked" BackgroundColor="White" TextColor="black" CornerRadius="10" FontAttributes="Bold"/>

                        <StackLayout>
                            <Label x:Name="Headline" Text="UTLÅNINGSKVITTO" FontSize="Large" IsVisible="false" TextColor="White"/>
            <Label x:Name="NumberOfItem" Text="" TextColor="White" IsVisible="false" />
                        </StackLayout>

                        <ListView x:Name="ProductList"
                              VerticalScrollBarVisibility="Never"
                              ItemTapped="ProductList_ItemTapped"
                              IsVisible="true"
                              >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Id}"
                                                   Grid.Column="0"
                                                   TextColor="White"
                                                   FontAttributes="Bold"/>
                                    <Label Text="{Binding Title}"
                                                   Grid.Column="1"
                                                   TextColor="White"
                                                   FontAttributes="Bold"/>
                                    <Label Text="{Binding ReturnDate}"
                                                   Grid.Column="2"
                                                   TextColor="White"
                                                   FontAttributes="Bold"/>

                                    <Button Grid.Column="3"
                                                    TextColor="Black"
                                                    CornerRadius="10"
                                                    BackgroundColor="White"
                                                    FontAttributes="Bold"
                                                    Clicked="Button_Clicked"
                                                    Text="Ta bort"
                                                    Margin="0,0,0,50"/>

                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

           

        </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>